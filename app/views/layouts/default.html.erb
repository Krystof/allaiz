<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="fr" lang="fr">
<head>
	<title></title>	
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<meta name="title" content=""/>	
	<meta name="keywords" content="" />	
	<meta name="description" content="" />	
	<meta name="Identifier-URL" content="" />
	<link rel="shortcut icon" href="/design/logo/favicon.png" />
	<%= stylesheet_link_tag "general.css" %> 
</head>

<body id="body" class="body">

<div id="global">
	<div id="header">
		<div class="container">
			<div id="container_logo" class="left" >
				<img id="logo" src="../layouts/images/design/logo/logo.png" title="" alt="" />
			</div>
			<div id="content_header" class="right">		
				<div id="connexion">
					<% if !session[:id] %>
				
					<form id="form_connexion" method="post" action="" class="left">
						<h2>Connexion</h2>
				
						<div id="submit_connexion" class="submit right">
							<%= link_to "Connexion", new_session_path %> 
						</div>										
					</form>
					<div id="header_inscription" class="right">
						<h2>Inscription</h2>
						<%= link_to "Pas encore inscrit ?", new_user_path %> 
					</div>
					<% else %>
						Bienvenue
						<%= @current_user.prenom %>
						<ul>
							<li><%= link_to 'Messagerie', messages_path %></li>
							<li>Missions</li>
							<li><%= link_to 'Mon profil', @current_user %></li>
							<li><%= link_to 'Mon compte', edit_user_path(@current_user) %></li>						
						</ul>
					<% end %>					
				</div>
			</div>
		</div> 
	</div>	
	<div id="middle">
		<div class="container">

		<p id="container_notification" class="notification" style="display:none;"><%= flash[:notice] %></p>
			<div id="{CONTAINER}" class="shadowed">
				<div class="inner-boundary">
					<%= yield %>
				</div>
			</div>
		</div>				
	</div>
	<div id="footer">	
		<div class="container">
		
			<ul id="menu_site">
				<li>
				<%= link_to 'Accueil' , root_url %> 
				
				</li>
				<li><a href="?p=faq" rel="" title="">FAQ</a></li>
				<li><a href="?p=contact" rel="" title="">Contact</a></li>
			</ul>
			
			<br />
		</div>				
	</div>	
	<div id="copyright">	
		<div class="container">
			<span>Copyright &copy; 2010</span> --
			<a href="?p=cgu" title="Conditions g&eacute;n&eacute;rales d'utilisation" rel="Conditions g&eacute;n&eacute;rales d'utilisation">Conditions g&eacute;n&eacute;rales d'utilisation</a> --
			<a href="?p=confidentialite" title="Politiques de confidentialit&eacute;" rel="Politiques de confidentialit&eacute;">Politiques de confidentialit&eacute;</a>
		</div>				
	</div>			
</div>

<%= javascript_include_tag 'jquery-1.4.2.min' %>
<%= javascript_include_tag 'application' %>	

</body>
</html>